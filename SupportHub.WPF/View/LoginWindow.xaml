<Window x:Class="SupportHub.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SupportHub.WPF"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="500">
    <Grid Background="LightGray">
        <Border CornerRadius="10" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="200" MinWidth="300" Padding="25">
            <StackPanel>
                <TextBlock Text="Username" Margin="0 0 0 5"/>
                <TextBox Padding="2" Text="{Binding Username}"/>
                <TextBlock Text="Password" Margin="0 10 0 5"/>
                <PasswordBox x:Name="PasswordBox" Padding="2"/>
                <Button Margin="0 15 0 5" IsDefault="True" Content="Login" Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=PasswordBox}"/>
                <TextBlock Margin="0 5 0 0" Foreground="Red" Text="{Binding NoAccountText}" ></TextBlock>
                <TextBlock Text="No account?" Margin="0 15 0 5"/>
                <Button Content="Signup" Command="{Binding SignupCommand}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
