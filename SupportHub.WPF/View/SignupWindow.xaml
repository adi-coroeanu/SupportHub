<Window x:Class="SupportHub.WPF.View.SignupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:convertors="clr-namespace:SupportHub.WPF.Convertors"
        mc:Ignorable="d"
        Title="Signup" Height="450" Width="500">
    <Window.Resources>
        <convertors:ToArrayConverter x:Key="ToArrayConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid Background="LightGray">
        <Border CornerRadius="10" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="250" MinWidth="300" Padding="25">
            <StackPanel>
                <TextBlock Text="Signup" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold"/>
                <TextBlock Margin="0 10 0 5" Text="Username"/>
                <TextBox Padding="2" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                <TextBlock Text="Username already exists" Foreground="Red" Visibility="{Binding UserExists, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <TextBlock Margin="0 10 0 5" Text="Enter password"></TextBlock>
                <PasswordBox x:Name="PasswordBox" Padding="2"></PasswordBox>
                <TextBlock Margin="0 10 0 5" Text="Re-enter password"/>
                <PasswordBox x:Name="RePasswordBox" Padding="2"></PasswordBox>
                <TextBlock Margin="0 10 0 5" Text="Email"/>
                <TextBox Padding="2" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                <TextBlock Text="Invalid email format" Foreground="Red" Visibility="{Binding ValidEmailFormat, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 5">
                    <TextBlock Text="Admin account?"/>
                    <CheckBox Margin="10 0 0 0" Padding="2" IsChecked="{Binding IsAdminChecked }"></CheckBox>
                </StackPanel>
                <TextBox Margin="0 5 0 5" Padding="2" Visibility="{Binding IsAdminChecked, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <Button Margin="0 30 0 0" Content="SignUp" Padding="5" Command="{Binding SignupCommand}">
                    <Button.CommandParameter>
                        <MultiBinding Converter="{StaticResource ToArrayConverter}">
                            <Binding ElementName="PasswordBox"/>
                            <Binding ElementName="RePasswordBox"/>
                        </MultiBinding>
                    </Button.CommandParameter>
                </Button>
            </StackPanel>
        </Border>
        
    </Grid>
</Window>
